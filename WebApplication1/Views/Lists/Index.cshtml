@model IEnumerable<WebApplication1.Models.List>

@{
    ViewBag.Title = "記帳城市";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
<h2>記帳城市</h2><i class="bi bi-coin"></i>
<h2><span class="badge badge-secondary">今天花了多少錢錢？</span></h2>
<p>
    @Html.ActionLink("新增", "Create")
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                金額
            </th>
            <th>
                日期
            </th>
            <th>
                修改日期
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.CreateTime)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.ModifyTime)
                </td>
                <td>
                    @Html.ActionLink("修改", "Edit", new { id = item.SN }) |
                    @*@Html.ActionLink("Details", "Details", new { id = item.SN })*@ 
                    @Html.ActionLink("刪除", "Delete", new { id = item.SN })
                </td>
            </tr>
        }
    </tbody>
</table>
